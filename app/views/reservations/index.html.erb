<h3><%= current_user.username %>'s Reservations</h3>
<br />
<%= page_entries_info @myreservations %>
<ul>
	<% @myreservations.each do |myreservation| %>
		<li>
    		<p><%= link_to(myreservation.book.title, myreservation.book) %></p>
			<p><b>Reservered On: <%= myreservation.reserved_on %></b></p>
			<p><b>Due On: <%= myreservation.due_on %></b></p>
			    		  <%= button_to 'Return Book', myreservation,
							method: :delete,
							data: { confirm: 'Are you sure?' } %>
		</li>
	<% end %>
</ul>
<%= paginate @myreservations %>

<br />

<%- if current_user.try(:admin?)%>
<h3>All Reservations</h3>
<br />
<%= page_entries_info @allreservations %>
<ul>
	<% @allreservations.each do |allreservation| %>
		<li>
    		 <p><%= link_to(allreservation.book.title, allreservation.book) %></p>
			<p><b>Reservered By: <%= allreservation.user.username %></b></p>
			<p><b>Reservered On: <%= allreservation.reserved_on %></b></p>
			<p><b>Due On: <%= allreservation.due_on %></b></p>   		  <%= button_to 'Return Book', allreservation,
							method: :delete,
							data: { confirm: 'Are you sure?' } %>
		</li>
	<% end %>
</ul>
<%= paginate @allreservations %>
<% end -%>